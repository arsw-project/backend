{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "biome format --write",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"drizzle:push": "pnpm drizzle-kit push --config src/drizzle/infrastructure/drizzle.config.ts",
		"drizzle:generate": "pnpm drizzle-kit generate --config src/drizzle/infrastructure/drizzle.config.ts",
		"drizzle:studio": "pnpm drizzle-kit studio --config src/drizzle/infrastructure/drizzle.config.ts",
		"lint": "biome check",
		"type-check": "tsc --noEmit",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prepare": "husky"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"arctic": "^3.7.0",
		"argon2": "^0.44.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^17.2.2",
		"drizzle-orm": "^0.44.5",
		"postgres": "^3.4.7",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"drizzle-kit": "^0.31.4",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jest": "^30.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
